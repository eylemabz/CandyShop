@model IEnumerable<CandyShop.Models.Candy>


<html>
	<head>
		<meta charset0="utf8-8" />
		<meta http-equiv="X-UA-Compatible" content="IE-edge" />
		<meta name="viewport" content="width=device-width" initial-scale="1" />
		<title>Candy Shop</title>

 </head>

<body>
	<h1>@ViewBag.CurrentCategory</h1>
	@foreach(var candy in Model)
            {
				<div>
					<h2>@candy.Name</h2>
					<h3>@candy.Price.ToString("c")</h3>
					<h4>@candy.Category.CategoryName</h4>
				</div>
            }
</body>
</html>